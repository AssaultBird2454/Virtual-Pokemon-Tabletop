<UserControl x:Class="AssaultBird2454.VPTU.Client.Class.Controls.Battlers.TurnOrder"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:AssaultBird2454.VPTU.Client.Class.Controls.Battlers"
             mc:Ignorable="d" 
             d:DesignHeight="300" Width="515.966">
    <Grid>
        <ListView Margin="0,25,0,0">
            <ListView.View>
                <GridView>
                    <GridViewColumn Header="Initiative Value" Width="100" DisplayMemberBinding="{Binding Speed_Adjusted}"/>
                    <GridViewColumn Header="Name" Width="200" DisplayMemberBinding="{Binding Name}"/>
                    <GridViewColumn Header="Played By" Width="200" DisplayMemberBinding="{Binding Name}"/>
                </GridView>
            </ListView.View>
        </ListView>
        <ToolBar Height="25" VerticalAlignment="Top">
            <Button Background="Red" Height="20" Width="20"/>
        </ToolBar>

    </Grid>
</UserControl>
