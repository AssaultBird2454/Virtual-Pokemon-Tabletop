<UserControl x:Class="AssaultBird2454.VPTU.Client.Class.Controls.Pokedex"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:AssaultBird2454.VPTU.Client.Class.Controls"
             mc:Ignorable="d" 
             d:DesignHeight="300" d:DesignWidth="300" Background="White">
    <Grid>
        <ToolBar x:Name="Tools" VerticalAlignment="Top">
            <Button x:Name="Tools_Reload" Height="20" Width="20" BorderBrush="{x:Null}" Click="Tools_Reload_Click">
                <Button.Background>
                    <ImageBrush ImageSource="pack://siteoforigin:,,,/Resources/refresh_20.png" Stretch="Uniform"/>
                </Button.Background>
            </Button>
        </ToolBar>
        <ListView x:Name="List" HorizontalAlignment="Left" Height="275" Margin="0,25,0,0" VerticalAlignment="Top" Width="300">
            <ListView.View>
                <GridView>
                    <GridViewColumn/>
                </GridView>
            </ListView.View>
        </ListView>
    </Grid>
</UserControl>
