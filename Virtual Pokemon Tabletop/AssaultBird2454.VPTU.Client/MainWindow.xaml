<Window
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:syncfusion="http://schemas.syncfusion.com/wpf"
        xmlns:local="clr-namespace:AssaultBird2454.VPTU.Client"
        xmlns:Map="clr-namespace:AssaultBird2454.VPTU.Tabletop.Map;assembly=AssaultBird2454.VPTU.Tabletop" x:Name="Main" x:Class="AssaultBird2454.VPTU.Client.MainWindow"
        mc:Ignorable="d"
        Title="Virtual Pokemon Tabletop - Client (Version: _____ _._._ Build _) (Commit: _______)" Height="440.278" Width="852.075" Closed="Main_Closed" Closing="Main_Closing" Loaded="Main_Loaded">
    <Grid>
        <syncfusion:DockingManager x:Name="Dock" Margin="0,18,0,27" DockTabAlignment="Bottom" ContainerMode="TDI" UseDocumentContainer="True">
            <ContentControl x:Name="Map" syncfusion:DockingManager.Header="Map" >
                <Map:Table x:Name="Client_Map" Margin="0"/>
            </ContentControl>

            <ContentControl x:Name="Server_Console" syncfusion:DockingManager.Header="Server Console" />

            <ContentControl x:Name="Chat" syncfusion:DockingManager.Header="Chat" />

            <ContentControl x:Name="Battle_Log" syncfusion:DockingManager.Header="Battle Log"/>

            <ContentControl x:Name="Turn_Order" syncfusion:DockingManager.Header="Turn Order" />

            <ContentControl x:Name="Tool_Box" syncfusion:DockingManager.Header="Tool Box" />

            <ContentControl x:Name="Trainer" syncfusion:DockingManager.Header="Trainer" />

            <ContentControl x:Name="Party" syncfusion:DockingManager.Header="Party" />
        </syncfusion:DockingManager>

        <Menu x:Name="Menu" VerticalAlignment="Top" Grid.ColumnSpan="2">
            <MenuItem x:Name="Menu_Menu" Header="Menu">
                <MenuItem x:Name="Menu_Menu_Connect" Header="Connect to Table"/>
                <MenuItem x:Name="Menu_Menu_Disconnect" Header="Disconnect from Table"/>
                <Separator x:Name="Menu_Menu_S1" Height="5"/>
                <MenuItem x:Name="Menu_Menu_Quit" Header="Quit"/>
            </MenuItem>
            <MenuItem x:Name="Menu_View" Header="View">
                <MenuItem x:Name="Menu_View_Pokedex" Header="Pokedex"/>
                <MenuItem x:Name="Menu_View_TokenSheets" Header="Token Sheets">
                    <MenuItem x:Name="Menu_View_TokenSheets_Pokemon" Header="Pokemon"/>
                    <MenuItem x:Name="Menu_View_TokenSheets_Trainer" Header="Trainer/NPC"/>
                </MenuItem>
                <MenuItem x:Name="Menu_View_Battle" Header="Battle">
                    <MenuItem x:Name="Menu_View_Battle_Initiative" Header="Initiative"/>
                </MenuItem>
                <MenuItem x:Name="Menu_View_MusicSFX" Header="Music &amp; Sound FX">
                    <MenuItem x:Name="Menu_View_MusicSFX_PlayListMGR" Header="Playlist Manager"/>
                    <MenuItem Header=""/>
                </MenuItem>
                <MenuItem x:Name="Menu_View_VirtualTable" Header="Virtual Table">
                    <MenuItem x:Name="Menu_View_VirtualTable_Board" Header="Board"/>
                    <MenuItem x:Name="Menu_View_VirtualTable_Settings" Header="Settings"/>
                </MenuItem>
                <MenuItem x:Name="Menu_View_ServerSettings" Header="Server Settings"/>
            </MenuItem>
            <MenuItem x:Name="Menu_Window" Header="Window">
                <MenuItem x:Name="Menu_Window_SaveLayout" Header="Save Layout" Click="Menu_Window_SaveLayout_Click"/>
                <MenuItem x:Name="Menu_Window_LoadLayout" Header="Load Layout" Click="Menu_Window_LoadLayout_Click"/>
                <MenuItem x:Name="Menu_Window_ManageLayout" Header="Manage Layouts"/>
                <Separator x:Name="Menu_Window_S1" HorizontalAlignment="Left" Width="172" Height="5"/>
                <MenuItem x:Name="Menu_Window_ReloadLayouts" Header="Reload Layout's" HorizontalAlignment="Left" Width="172"/>
                <Separator x:Name="Menu_Window_S2" HorizontalAlignment="Left" Height="5" Width="172"/>
            </MenuItem>
        </Menu>
        <StatusBar x:Name="Status" Height="27" VerticalAlignment="Bottom">
            <StatusBarItem x:Name="Status_ServerType" Content="Server Type: " HorizontalAlignment="Left" Padding="3,3,15,3"/>
            <StatusBarItem x:Name="Status_ServerAddress" Content="Server Address: " HorizontalAlignment="Left" Padding="3,3,15,3"/>
            <StatusBarItem x:Name="Status_ServerPing" Content="Server Ping: " HorizontalAlignment="Left" Padding="3,3,25,3"/>

            <StatusBarItem x:Name="Status_CampaignName" Content="Campaign Name: " HorizontalAlignment="Left" Padding="3,3,15,3"/>
            <StatusBarItem x:Name="Status_CampaignGM" Content="Campaign GM: " HorizontalAlignment="Left" Padding="3,3,15,3"/>
        </StatusBar>
    </Grid>
</Window>
