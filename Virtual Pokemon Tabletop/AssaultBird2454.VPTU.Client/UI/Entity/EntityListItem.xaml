<UserControl x:Class="AssaultBird2454.VPTU.Client.UI.Entities.EntitiesListItem"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:local="clr-namespace:AssaultBird2454.VPTU.Client.UI.Entities"
             mc:Ignorable="d"
             d:DesignHeight="30" d:DesignWidth="200">
    <Grid MaxHeight="30">
        <StackPanel Orientation="Horizontal">
            <Image x:Name="Entities_Image" Source="pack://siteoforigin:,,,/Resources/Unknown_Pokemon_Sprite.png"
                   MaxWidth="30" MaxHeight="30" />
            <Label x:Name="Entities_Name" Content="" Margin="0,0,20,0" />
            <WrapPanel VerticalAlignment="Center" x:Name="Entities_PlayerIndicators">
                <Border Background="Blue" Width="8" Height="12" BorderBrush="#00000000" Margin="0,0,5,0" />
                <Border Background="Green" Width="8" Height="12" BorderBrush="#00000000" Margin="0,0,5,0" />
            </WrapPanel>
        </StackPanel>
    </Grid>
</UserControl>